set -e

coins=${1:-'btc ltc eth bch eos xrp etc'}

while true; do 
for c in ${coins}; do
	if inotifywait -e close -t 120 *${c}*balance ; then
		continue
	fi
	echo $(date) ${c} restarted >> restarted.log
	bash allrestart ${c}
done

INODE_FREE=$(stat -f . | grep 'Inodes:' | awk '{print $5}')
if [ $INODE_FREE -lt 100000 ]; then
	bash allbackup
fi

done
